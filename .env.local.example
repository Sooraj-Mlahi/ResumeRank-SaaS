# Copy this file to .env.local and fill in your values

# Database (auto-configured on Replit)
DATABASE_URL=postgresql://...

# Session secret for express-session
SESSION_SECRET=your-secret-key-here-change-in-production

# Node.js Options (for Windows Node 24 compatibility)
NODE_OPTIONS=--max-old-space-size=4096

# OAuth Credentials (optional - for email integration)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

MICROSOFT_CLIENT_ID=your_microsoft_client_id
MICROSOFT_CLIENT_SECRET=your_microsoft_client_secret
MICROSOFT_TENANT_ID=your_microsoft_tenant_id

# OpenAI API Key (optional - for AI resume ranking)
# Leave empty to use fallback keyword-based ranking
OPENAI_API_KEY=sk-...

# Server Port
PORT=5000
